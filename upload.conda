#!/bin/bash

conda build conda-recipe --no-anaconda-upload
if [ $? -ne 0 ]
then
 exit
fi

filepath=`conda build conda-recipe --output`
mkdir -p conda-bins
conda convert $filepath -p all -o conda-bins

conda_bins=`find conda-bins -type f -name '*.tar.bz2'`
for i in $conda_bins
do
  anaconda upload $i -i
done
